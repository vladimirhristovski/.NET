@model Kolokviumska.Models.DoctorPatients
@{
    ViewBag.Title = "AddPatient";
}

<h2>Додадете пациент кај д-р @Model.Doctor.Name</h2>

@using (Html.BeginForm("AddPatientValidate", "Doctors"))
{
    <div class="form-group">
        @Html.LabelFor(model => model.PatientId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.PatientId,
           new SelectList(Model.Patients, "Id", "Name"),
           new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PatientId, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.DoctorId)
        </div>

        <button type="submit" class="btn btn-default">Додади</button>
    </div>
}