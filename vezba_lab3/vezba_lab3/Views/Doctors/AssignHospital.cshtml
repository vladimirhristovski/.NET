@model vezba_lab3.Models.HospitalDoctors
@{
    ViewBag.Title = "AssignHospital";
}

<h2>AssignHospital</h2>

@using (Html.BeginForm("AssignHospitalValidate", "Doctors"))
{
    <div class="form-group">
        @Html.DropDownListFor(m => m.HospitalId, new SelectList(Model.Hospitals, "Id", "Name"))
        @Html.HiddenFor(m => m.DoctorId)
    </div>

    <dic class="form-group">
        <button type="submit" class="btn btn-default">Assign</button>
    </dic>
}